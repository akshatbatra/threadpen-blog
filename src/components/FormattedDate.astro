---
interface Props {
	date: Date;
}

let { date } = Astro.props;
const dateISOString = date;
date = new Date(dateISOString);
---

<time datetime={dateISOString}>
	{
		date.toLocaleString("en-IN", {timeZone: "IST"})
		/*
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
		*/
	}
</time>
